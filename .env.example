# Cloudflare R2 Configuration
# Get these from your Cloudflare dashboard
R2_ACCESS_KEY_ID=your_r2_access_key_id_here
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key_here

# R2 Bucket URLs
# Replace with your custom domain or R2 bucket URL
NEXT_PUBLIC_R2_BUCKET_URL=https://your-custom-domain.com
NEXT_PUBLIC_R2_PREFIX=mawridreader

# Development mode (uses local files instead of R2)
# Set to true to use local dictionary images during development
NEXT_PUBLIC_USE_LOCAL_IMAGES=false